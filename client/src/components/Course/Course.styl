.Course
  width: 100%
  height: 100vh
  display: flex
  justify-content: center
  align-items: center
  flex-direction: row
  @media all and (max-width: 1400px)
    flex-direction: column
    height: -webkit-fill-available
    padding: 20px 20px
    box-sizing: border-box
    padding-top: 150px
  position: relative
  .results-container
    width: 50%
    z-index: 1
    padding: 0 40px
    @media all and (max-width: 1400px)
      width: 100%
      padding: 0
    h1
    h2
      color: white
  video
    position: absolute
    top: 100px
    height: 100%
    z-index: -1
    object-fit: cover
    filter: brightness(80%) contrast(78%)
