.About
  width: 100%
  height: 100%
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column
  margin-top: 100px
  video
    position: absolute
    top: 100px
    z-index: -1
    object-fit: cover
    filter: brightness(80%) contrast(78%)
  h2
  p
    color: white
    padding: 15px 0
  > p
    text-align: center

  .v2
    width: 50%
    margin: 50px 0
    .developers
      display: grid
      grid-template-columns: repeat(3, 1fr)
      grid-column-gap: 10px
      @media all and (max-width: 700px)
        grid-template-columns: repeat(2, 1fr)
        p:nth-of-type(4)
          color: #e4cdcd
          grid-column: 2
          grid-row: 1
        p:nth-of-type(2)
          grid-column: 1
          grid-row: 2
        p:nth-of-type(3)
          grid-column: 1
          grid-row: 3
        p:nth-of-type(5)
          color: #e4cdcd
        p:nth-of-type(6)
          color: #e4cdcd
        
  .v1
    width: 50%
    margin: 50px 0
    .developers
      display: grid
      grid-template-columns: repeat(5, 1fr)
      grid-column-gap: 10px
      @media all and (max-width: 700px)
        grid-template-columns: repeat(2, 1fr)
        p:nth-of-type(2)
          grid-column: 1
          grid-row: 4
        p:nth-of-type(3)
          grid-column: 1
          grid-row: 2
        p:nth-of-type(6)
          color: #e4cdcd
          grid-column: 2
          grid-row: 1
        p:nth-of-type(8)
          color: #e4cdcd
          grid-column: 2
          grid-row: 2
        p:nth-of-type(10)
          color: #e4cdcd
          grid-column: 2
          grid-row: 3
        p:nth-of-type(10)
          color: #e4cdcd
          grid-column: 2
          grid-row: 3
        p:nth-of-type(7)
          color: #e4cdcd
          grid-column: 2
          grid-row: 4
        p:nth-of-type(9)
          color: #e4cdcd
          grid-column: 2
          grid-row: 5