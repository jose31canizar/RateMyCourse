.Home
  width: 100%
  height: 100vh
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column
  margin-top: 100px
  video
    position: absolute
    top: 100px
    z-index: -1
    object-fit: cover
    filter: brightness(80%) contrast(78%)
  .search-box-container
    width: auto
    display: flex
    justify-content: center
    align-items: flex-start
    flex-direction: column
    @media all and (max-width: 1200px)
      width: 60%
    @media all and (max-height: 700px)
      width: 100%
      justify-content: space-around
      align-items: center
      flex-direction: row
    .search-box
      display: flex
      justify-content: center
      align-items: flex-start
      flex-direction: column
      label
        width: 100%
        color: white
    h2
      color: white
    input::-webkit-calendar-picker-indicator
      background-color: inherit
      opacity: 1
    select
      margin: 50px;
      border: 1px solid #111;
      background: transparent;
      width: 150px;
      padding: 5px 35px 5px 5px;
      font-size: 16px;
      border: 1px solid #ccc;
      height: 34px;
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      background: url(http://www.stackoverflow.com/favicon.ico) 96% / 15% no-repeat #eee;
    input[type=search]
      width: 100%
      -webkit-appearance: none
      border: none
      outline: none
      background: transparent
      font-size: 2.5em
      color: #f1f1f1
      border-bottom: 0.5pt solid #fff
      -webkit-text-fill-color: #fff
      caret-color: #fff
      padding-bottom: 10px
      text-transform: lowercase
    .search-button
      font-family: 'Avenir', Futura, Helvetica, sans-serif
      background: #619261
      padding: 10px 30px
      border-radius: 15px
      color: white
      font-weight: 900
      box-shadow: 0px 5px 10px 0px #58444447
      margin-bottom: 20px
      cursor: pointer
    .search-button:hover
      background: #eca874
    .advanced-search
      margin: 100px 0
      .advanced-search-filter
        cursor: pointer
        padding: 10px 0
        display: flex
        label
          cursor: pointer
          padding-left: 10px
          color: white
        svg
          position: absolute
          width: 25px
          height: 25px
          fill: white
          stroke: white
          stroke-width: 0.5
          pointer-events: none
        input[type=checkbox]
          -webkit-appearance: none
          width: 25px
          height: 25px
          transition: all 0.5s ease;
          outline: none
          cursor: pointer
          border: 1.5px solid #fff
        // input[type=checkbox]:filters
        //   border-radius: 100%
    input:focus
      color: rgb(103, 82, 121)
