.Results
  width: 100%
  height: 100vh
  display: flex
  justify-content: flex-start
  align-items: center
  flex-direction: column
  padding: 20%
  @media all and (max-width: 1200px)
    padding: 10%
  box-sizing: border-box
  video
    position: absolute
    top: 100px
    z-index: -1
    object-fit: cover
    filter: brightness(80%) contrast(78%)
  h1
    padding: 100px
  for cell in (1..50)
    .course-cell:nth-child({cell})
      animation: (0.5*cell)s slidein
      border: 3px solid white
      padding: 20px
      border-radius: 20px
      margin: 20px
      width: 100%
      cursor: pointer
      h2
      p
        color: white
    .course-cell:hover
      background: white
      h2
      p
        color: #555056
