hover-color = #555056

.Results
  width: 100%
  height: 100%
  overflow-y: scroll
  display: flex
  justify-content: flex-start
  align-items: center
  flex-direction: column
  padding: 20%
  background: transparent
  position: absolute
  z-index: 1
  top: 0
  animation: fadein 1s
  @media all and (max-width: 1200px)
    padding: 10%
  box-sizing: border-box
  video
    position: absolute
    pointer-events: none
    top: 100px
    z-index: 1
    object-fit: cover
    filter: brightness(80%) contrast(78%)
  h1
    padding: 100px
    color: white
    z-index: 2
  for cell in (1..50)
    .course-cell:nth-child({cell})
      z-index: 2
      animation: (0.5*cell)s slidein
      border: 3px solid white
      padding: 20px
      border-radius: 20px
      margin: 20px
      width: 100%
      cursor: pointer
      h2
      p
        color: white
    .course-cell:hover
      background: white
      h2
      p
      label
        color: hover-color
      .svg-icon
        fill: hover-color
